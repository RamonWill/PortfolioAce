<UserControl x:Class="PortfolioAce.Views.AllFundsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PortfolioAce.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="357*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="117*"/>
            <RowDefinition Height="247*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Column="1" Grid.Row="0" Margin="2">
            <StackPanel DockPanel.Dock="Left">
                <TextBlock Text="{Binding Path=CurrentFund.FundName, StringFormat='Fund Name: {0}'}"></TextBlock>
                <TextBlock><Bold>NAV as of 04/01/2021:</Bold> 50,000,000 GBP</TextBlock>
                <TextBlock><Bold>NAV per share as of 04/01/2021:</Bold> 105.97</TextBlock>
                <TextBlock><Bold>ITD Performance:</Bold> 10.7314%</TextBlock>
            </StackPanel>
            <StackPanel DockPanel.Dock="Left" Margin="30,0,0,0">
                <Button Margin="20,10,0,0" Width="210">View NAV Breakdown</Button>
                <Button Margin="20,10,0,0" Width="210">View Subscriptions and Redemptions</Button>
            </StackPanel>
        </DockPanel>
        <Border BorderBrush="Silver" BorderThickness="1" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"/>
        <DockPanel Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="2">
            <TextBlock DockPanel.Dock="Top" Margin="0,0,0,5" Text="{Binding Path=CurrentFund.FundName, StringFormat='Current Positions for {0}'}"></TextBlock>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button Margin="1,0,3,0" Command="{Binding ShowNewTradeCommand}">Add Trade</Button>
                <Button Margin="0,0,3,0" Command="{Binding ShowNewCashTradeCommand}">Add Cash Trade</Button>
                <Button Margin="0,0,3,0">View All Transactions</Button>
                <Button Margin="0,0,3,0">View Cash Ledger</Button>
            </StackPanel>
            <DataGrid DockPanel.Dock="Bottom" Name="dgPositions" VerticalScrollBarVisibility="Auto" ItemsSource="{Binding Path=dgFundPositions}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"  />
                    <DataGridTextColumn Header="Symbol" Binding="{Binding symbol}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding NetQuantity}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Average Cost" Binding="{Binding AverageCost}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Realised Profit/Loss" Binding="{Binding RealisedPnL}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Ccy"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
        <Border BorderBrush="Silver" BorderThickness="1" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>
        <ListBox Name="lbFundList" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" HorizontalContentAlignment="Stretch" ItemsSource="{Binding Path=lbFunds}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <TextBlock Text="{Binding }">
                            <TextBlock.InputBindings>
                                <MouseBinding MouseAction="LeftDoubleClick" 
                                              Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:AllFundsView}},Path=DataContext.SelectFundCommand }"
                                              CommandParameter="{Binding }"/>
                                <!-- Link for guidance on how to link listbox-->
                                <!--https://stackoverflow.com/a/33516980/12148778-->
                            </TextBlock.InputBindings>
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
