<UserControl x:Class="PortfolioAce.Views.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PortfolioAce.Views"
             xmlns:nav="clr-namespace:PortfolioAce.Navigation"
             mc:Ignorable="d" d:DesignWidth="800" Height="auto">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Home" Command="{Binding UpdateCurrentViewModelCommand}" CommandParameter="{x:Static nav:ViewType.Home}" />
                <MenuItem Header="Settings" Command="{Binding ShowSettingsCommand}">
                    <MenuItem.Icon>
                        <Image Source="/PortfolioAce;component/Resources\icon_settings.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="Exit" Command="{Binding CloseApplicationCommand}">
                    <MenuItem.Icon>
                        <Image Source="/PortfolioAce;component/Resources\icon_exit.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Funds">
                <MenuItem Header="View Funds"  Command="{Binding UpdateCurrentViewModelCommand}" CommandParameter="{x:Static nav:ViewType.FundsView}">
                    <MenuItem.Icon>
                        <Image Source="/PortfolioAce;component/Resources\icon_view_fund.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="Create a New Fund..."  Command="{Binding ShowNewFundCommand}">
                    <MenuItem.Icon>
                        <Image Source="/PortfolioAce;component/Resources\icon_add_fund.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="View Security Prices"  Command="{Binding UpdateCurrentViewModelCommand}" CommandParameter="{x:Static nav:ViewType.SysSecurityPrices}">
                    <MenuItem.Icon>
                        <Image Source="/PortfolioAce;component/Resources\icon_view_prices.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="View FX Rates"  Command="{Binding UpdateCurrentViewModelCommand}" CommandParameter="{x:Static nav:ViewType.SysFXRates}">
                    <MenuItem.Icon>
                        <Image Source="/PortfolioAce;component/Resources\icon_view_fx.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="Import Trades..." Command="{Binding ShowImportTradesCommand}">
                    <MenuItem.Icon>
                        <Image Source="/PortfolioAce;component/Resources\icon_import_trades.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Security Manager..." Command="{Binding ShowSecurityManagerCommand}">
                    
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About" Command="{Binding ShowAboutCommand}" />
            </MenuItem>
        </Menu>
    </DockPanel>
</UserControl>
